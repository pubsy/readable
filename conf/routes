# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                                       RootController.root

GET     /books                                  BooksController.books
GET     /books/page/{page}/size/{size}          BooksController.books
GET     /books/{id}                             BooksController.book
POST    /books/{id}/mark                        BooksController.mark
POST    /books                                  BooksController.createBook

GET     /users                                  UsersController.users
GET     /users/page/{page}/size/{size}          UsersController.users
GET     /users/{id}                             UsersController.user
POST    /register                               UsersController.createUser
GET    	/login                                  RootController.login

# Hypercore routes
*       /                                       module:hypercore

# Ignore favicon requests
GET     /favicon.ico                            404

# Map static resources from the /app/public folder to the /public path
GET     /public/                                staticDir:public

# Catch all
*       /{controller}/{action}                  {controller}.{action}
